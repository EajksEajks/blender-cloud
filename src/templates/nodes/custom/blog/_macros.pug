	| {% if project.blog_archive_next %}
	a.px-5.py-3(
		href="{{ project.blog_archive_next }}", rel="next")
		| Next page
		i.pi-angle-right
	| {% else %}
	span.px-5.py-3.text-black-50
		| Next page
		i.pi-angle-right
	| {% endif %}

